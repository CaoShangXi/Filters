@* HandleError过滤器会传递HandleErrorInfo视图模型给视图 *@
@model HandleErrorInfo
@{
    ViewBag.Title = "Sorry，there was a problem！";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Range Error</title>
</head>
<body>
    <h2>Sorry</h2>
    <span>The value @(((ArgumentOutOfRangeException)Model.Exception).ActualValue) was out of the excpected range.</span>
    <div>
        @Html.ActionLink("Change value and try again","Index")
    </div>
</body>
</html>
